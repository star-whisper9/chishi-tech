# Nginx 配置示例 - 用于支持 FFmpeg.wasm 的 SharedArrayBuffer
# 
# 使用方法：
# 1. 将此文件复制到你的 Nginx 配置目录（通常是 /etc/nginx/sites-available/）
# 2. 根据实际情况修改 server_name 和 root 路径
# 3. 创建软链接到 sites-enabled：
#    ln -s /etc/nginx/sites-available/chishi-tech /etc/nginx/sites-enabled/
# 4. 测试配置：nginx -t
# 5. 重载 Nginx：nginx -s reload

server {
    listen 80;
    listen [::]:80;
    
    # 修改为你的域名
    server_name your-domain.com www.your-domain.com;
    
    # 修改为你的构建输出目录
    root /var/www/chishi-tech/dist;
    index index.html;

    # 启用 gzip 压缩
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/rss+xml font/truetype font/opentype application/vnd.ms-fontobject image/svg+xml;

    # ===== 关键配置：跨域隔离头 =====
    # FFmpeg.wasm 需要这些头才能使用 SharedArrayBuffer
    add_header Cross-Origin-Opener-Policy "same-origin" always;
    add_header Cross-Origin-Embedder-Policy "require-corp" always;
    
    # 可选：增强安全性
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # SPA 路由支持 - 所有请求都返回 index.html
    location / {
        try_files $uri $uri/ /index.html;
    }

    # 静态资源缓存配置
    location /assets/ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        
        # 这些头也需要在静态资源上设置
        add_header Cross-Origin-Opener-Policy "same-origin" always;
        add_header Cross-Origin-Embedder-Policy "require-corp" always;
    }

    # 字体文件
    location ~* \.(woff|woff2|ttf|otf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header Access-Control-Allow-Origin "*";
        
        add_header Cross-Origin-Opener-Policy "same-origin" always;
        add_header Cross-Origin-Embedder-Policy "require-corp" always;
    }

    # 图片和视频
    location ~* \.(jpg|jpeg|png|gif|ico|svg|webp|mp4|webm)$ {
        expires 30d;
        add_header Cache-Control "public";
        
        add_header Cross-Origin-Opener-Policy "same-origin" always;
        add_header Cross-Origin-Embedder-Policy "require-corp" always;
    }

    # 禁止访问隐藏文件
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

